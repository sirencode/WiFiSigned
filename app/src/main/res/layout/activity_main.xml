<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="WiFi签到"
        android:id="@+id/wifi_btn"
        android:layout_marginTop="135dp"
        android:layout_alignParentTop="true" android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" android:layout_marginLeft="38dp"
        android:layout_marginStart="38dp"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="GPS签到"
        android:id="@+id/gps_btn" android:layout_alignTop="@+id/wifi_btn"
        android:layout_alignParentRight="true" android:layout_alignParentEnd="true"
        android:layout_marginRight="35dp" android:layout_marginEnd="35dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="签到结果显示："
        android:id="@+id/tv_signed" android:layout_below="@+id/wifi_btn"
        android:layout_alignLeft="@+id/wifi_btn" android:layout_alignStart="@+id/wifi_btn"
        android:layout_alignRight="@+id/gps_btn" android:layout_alignEnd="@+id/gps_btn"
        android:layout_alignParentBottom="true"/>
</RelativeLayout>
